<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dicoding.picodiploma.KamusKu">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_collections_bookmark_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_collections_bookmark_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="com.dicoding.picodiploma.KamusKu.DetailActivity" />
        <activity
            android:name="com.dicoding.picodiploma.KamusKu.KamusActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dicoding.picodiploma.KamusKu.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.dicoding.picodiploma.KamusKu.services.DataManagerService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService" />
    </application>

</manifest>